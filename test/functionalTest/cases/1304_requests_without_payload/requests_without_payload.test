# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entities V2

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. GET /v2/entities without payload
# 02. POST /v2/entities
# 03. GET /v2/entities
# 04. GET /v2/entities?options=count,normalized
# 05. POST /v2/entities with compound attribute value
#

echo "01. POST /v2/entities"
echo "===================="
orionCurl -X POST --url /v2/entities --json
echo
echo


echo "02. POST /v2/entities"
echo "====================="
payload='{ "id":   "E1", "type": "T1", "attribute": "value" }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "03. PUT /v2/entities/E1/attrs/attribute"
echo "======================================="
orionCurl -X PUT --url v2/entities/E1/attrs/attribute --json
echo
echo

--REGEXPECT--
01. POST /v2/entities
=====================
HTTP/1.1 411 Length Required
Content-Length: 91
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Zero/No Content-Length in PUT/POST/PATCH request",
    "error": "LengthRequired"
}


02. POST /v2/entities
=====================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1
Date: REGEX(.*)


03. PUT /v2/entities/E1/attrs/attribute
=======================================
HTTP/1.1 411 Length Required
Content-Length: 91
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Zero/No Content-Length in PUT/POST/PATCH request",
    "error": "LengthRequired"
}



--TEARDOWN--
brokerStop CB
dbDrop CB

